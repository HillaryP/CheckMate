<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4A90E2"
    android:orientation="vertical"
    tools:context="edu.washington.prathh.checkmate.Signup">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_large"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckMate"
            android:layout_gravity="center"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/toolbar_title" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:paddingLeft="8dp"
        android:textColor="#B3ffffff"
        android:textStyle="bold"
        android:text="USERNAME"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="36dp"
        android:textColorHighlight="#000000"
        android:textStyle="bold"
        android:background="@drawable/input_line"
        android:layout_marginRight="36dp"
        android:layout_marginTop="4dp"
        android:id="@+id/username"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="28dp"
    android:layout_marginTop="18dp"
    android:textSize="14dp"
    android:paddingLeft="8dp"
    android:textColor="#B3ffffff"
    android:textStyle="bold"
    android:text="PASSWORD"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="36dp"
        android:textColorHighlight="#000000"
        android:textStyle="bold"
        android:background="@drawable/input_line"
        android:layout_marginRight="36dp"
        android:layout_marginTop="4dp"
        android:id="@+id/password"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="18dp"
                android:textSize="14dp"
                android:paddingLeft="8dp"
                android:textColor="#B3ffffff"
                android:textStyle="bold"
                android:text="FIRST NAME"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="36dp"
                android:textColorHighlight="#000000"
                android:textStyle="bold"
                android:background="@drawable/input_line"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:id="@+id/first_name"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="18dp"
                android:textSize="14dp"
                android:paddingLeft="8dp"
                android:textColor="#B3ffffff"
                android:textStyle="bold"
                android:text="LAST NAME"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColorHighlight="#000000"
                android:textStyle="bold"
                android:background="@drawable/input_line"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="4dp"
                android:id="@+id/last_name"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="18dp"
        android:textSize="14dp"
        android:paddingLeft="8dp"
        android:textColor="#B3ffffff"
        android:textStyle="bold"
        android:text="PHONE NUMBER"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="36dp"
        android:textColorHighlight="#000000"
        android:textStyle="bold"
        android:background="@drawable/input_line"
        android:layout_marginRight="36dp"
        android:layout_marginTop="4dp"
        android:id="@+id/phone_no"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginLeft="75dp"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="Yes, I tested all negative on my most recent STI check."/>

        <CheckBox
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/has_sti" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#E8C547"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Sign Up"/>
    </RelativeLayout>

</LinearLayout>
