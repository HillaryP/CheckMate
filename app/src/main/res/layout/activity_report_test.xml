<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
tools:context="edu.washington.prathh.checkmate.ReportTest"
android:orientation="vertical">

<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="?attr/colorPrimary"
    android:elevation="6dp"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:paddingTop="22dp"
    android:paddingLeft="19dp"
    android:textSize="14dp"
    android:text="Select tests in which you were tested positive"
    android:textColor="#2D2D2D"/>

<View
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:background="#D7D7D7" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chlamydia"
            android:textSize="18dp"
            android:padding="20dp"
            android:layout_marginLeft="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gonorrhea"
            android:textSize="18dp"
            android:padding="20dp"
            android:layout_marginLeft="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genital herpes (no symptoms)"
            android:textSize="18dp"
            android:padding="20dp"
            android:layout_marginLeft="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genital herpes (with symptoms)"
            android:textSize="18dp"
            android:padding="20dp"
            android:layout_marginLeft="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Syphilis"
            android:textSize="18dp"
            android:padding="20dp"
            android:layout_marginLeft="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trichomoniasis"
            android:textSize="18dp"
            android:padding="20dp"
            android:layout_marginLeft="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HPV (genital warts)"
            android:textSize="18dp"
            android:padding="20dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</ScrollView>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="27dp">

    <Button
        android:layout_width="96dp"
        android:layout_height="38dp"
        android:background="#E8C547"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Next"
        android:layout_marginLeft="260dp"
        android:id="@+id/test_submission"/>
</LinearLayout>


</LinearLayout>

